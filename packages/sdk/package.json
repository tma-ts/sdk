{
  "name": "@tma-ts/sdk",
  "version": "9.1.12",
  "private": false,
  "type": "module",
  "description": "TypeScript SDK that removes the friction of integrating Telegram Mini Apps",
  "keywords": [
    "telegram",
    "telegram typescript",
    "telegram-mini-app",
    "telegram-mini-apps",
    "telegram-web-app",
    "telegram-web-apps",
    "webapp",
    "sdk",
    "tma"
  ],
  "homepage": "https://github.com/tma-ts/sdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tma-ts/sdk.git"
  },
  "license": "MIT",
  "author": "Andrey Reznik",
  "scripts": {
    "build": "rimraf ./dist && tsup src/index.ts --format esm --dts",
    "prepublishOnly": "bun run build",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "./dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "latest",
    "@types/web": "^0.0.276",
    "bun": "^1.2.23"
  },
  "peerDependencies": {
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5"
  }
}
